<ehcache>
    
    <diskStore path="java.io.tmpdir/Announcements" />
    
    <defaultCache 
        maxElementsInMemory="1024" 
        eternal="false"
        timeToIdleSeconds="300" 
        timeToLiveSeconds="600" 
        overflowToDisk="false"
        memoryStoreEvictionPolicy="LRU"    
    />
    
    <cache name="edu.uci.vcsa.portal.portlets.announcements.model.Announcement" 
        maxElementsInMemory="1000" 
        eternal="true"
        overflowToDisk="false" 
        timeToIdleSeconds="0" 
        timeToLiveSeconds="86400" 
        memoryStoreEvictionPolicy="LRU"
    />

    <cache name="edu.uci.vcsa.portal.portlets.announcements.model.Topic" 
        maxElementsInMemory="50" 
        eternal="true"
        overflowToDisk="false" 
        timeToIdleSeconds="0" 
        timeToLiveSeconds="86400" 
        memoryStoreEvictionPolicy="LRU"    
    />
               
    <cache name="edu.uci.vcsa.portal.portlets.announcements.model.TopicSubscription" 
        maxElementsInMemory="7680" 
        eternal="false"
        overflowToDisk="false" 
        timeToIdleSeconds="0" 
        timeToLiveSeconds="86400" 
        memoryStoreEvictionPolicy="LFU"
    />      
    
    <cache name="edu.uci.vcsa.portal.portlets.announcements.model.Topic.audience" 
        maxElementsInMemory="2048" 
        eternal="false"
        overflowToDisk="false" 
        timeToIdleSeconds="300" 
        timeToLiveSeconds="600" 
        memoryStoreEvictionPolicy="LRU"    
    />

    <cache name="edu.uci.vcsa.portal.portlets.announcements.model.Topic.admins" 
        maxElementsInMemory="2048" 
        eternal="false"
        overflowToDisk="false" 
        timeToIdleSeconds="300" 
        timeToLiveSeconds="600" 
        memoryStoreEvictionPolicy="LRU"    
    />
    
    <cache name="edu.uci.vcsa.portal.portlets.announcements.model.Topic.moderators" 
        maxElementsInMemory="2048" 
        eternal="false"
        overflowToDisk="false" 
        timeToIdleSeconds="300" 
        timeToLiveSeconds="600" 
        memoryStoreEvictionPolicy="LRU"    
    />
    
    <cache name="edu.uci.vcsa.portal.portlets.announcements.model.Topic.authors" 
        maxElementsInMemory="2048" 
        eternal="false"
        overflowToDisk="false" 
        timeToIdleSeconds="300" 
        timeToLiveSeconds="600" 
        memoryStoreEvictionPolicy="LRU"    
    />    
    
    
    
    <!--
        | Cache for table updates
        +-->
    <cache name="org.hibernate.cache.UpdateTimestampsCache"
        maxElementsInMemory="32"
        eternal="false"
        overflowToDisk="false"
        timeToIdleSeconds="0"
        timeToLiveSeconds="0"
        diskPersistent="false"
        memoryStoreEvictionPolicy="FIFO"
    />
    
    <!--
        | Cache for queries
        +-->
    <cache name="org.hibernate.cache.StandardQueryCache"
        maxElementsInMemory="1024"
        eternal="false"
        overflowToDisk="false"
        timeToIdleSeconds="300"
        timeToLiveSeconds="600"
        diskPersistent="false"
        memoryStoreEvictionPolicy="LRU"
    />
    
               
</ehcache>
