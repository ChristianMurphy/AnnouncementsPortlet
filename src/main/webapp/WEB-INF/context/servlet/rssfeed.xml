<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    
    <!-- Controllers -->
    
    <bean id="rssFeedController" class="edu.uci.vcsa.portal.portlets.announcements.controller.RssFeedController">
        <property name="announcementService" ref="announcementService" />
    </bean>
    
    <!-- Interceptors -->
    
    <!-- Handler Mappings -->
    
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="interceptors">
            <list>
                <ref bean="openSessionInViewInterceptor"/>
            </list>
        </property>
        <property name="mappings">
            <props>
                <prop key="/getFeed">rssFeedController</prop>
            </props>
        </property>
    </bean>
    
    <!-- Exceptions Handlers -->
    
    <bean id="defaultExceptionHandler" class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
        <property name="exceptionMappings">
            <props />
        </property>
    </bean>
    
</beans>